import("//build/test.gni")
import("//foundation/ability/form_fwk/form_fwk.gni")

module_output_path = "form_fwk/form_render_service"

ohos_unittest("FrsFormRenderSerialTest") {
  module_out_path = module_output_path

  include_dirs = [ "${form_fwk_path}/services/form_render_service/include" ]
  sources = [ "${form_fwk_path}/test/unittest/frs_form_render_serial_queue_test/frs_form_render_serial_queue_test.cpp" ]

  configs = []
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${form_fwk_path}:fms_target",
    "${form_fwk_path}:fmskit_native",
    "${form_fwk_path}/services/form_render_service:formrender",
    "${form_fwk_path}/services/form_render_service:formrender_service",
    "//third_party/googletest:gmock_main",
  ]

  external_deps = [
    "ffrt:libffrt",
    "form_fwk:form_manager",
  ]

  if (device_usage_statistics) {
    external_deps += [ "device_usage_statistics:usagestatsinner" ]
    defines = [ "DEVICE_USAGE_STATISTICS_ENABLE" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":FrsFormRenderSerialTest" ]
}
