import("//build/test.gni")
import("//foundation/ability/form_fwk/form_fwk.gni")

module_output_path = "form_fwk/form_mgr_service"

ohos_unittest("FmsFormDistributedClientTest") {
  module_out_path = module_output_path

  sources = [
    "${form_fwk_path}/test/mock/src/mock_distributed_sched.cpp",
    "${form_fwk_path}/test/unittest/fms_form_distributed_client_test/fms_form_distributed_client_test.cpp",
  ]

  include_dirs = [
    "${bundlefwk_inner_api_path}/appexecfwk_base/include/",
    "${dtbschedmgr_path}/include/",
    "${samgr_proxy_path}/include",
    "${adapter_innerkits_path}/include/",
    "${form_fwk_path}/interfaces/inner_api/include",
    "${form_fwk_path}/test/mock/include",
    "${distributeddatamgr_path}/kv_store/interfaces/innerkits/distributeddata/include",
    "${ability_dmsfwk_path}/services/dtbschedmgr/include/",
  ]

  configs = [
    "${form_fwk_path}/test:formmgr_test_config",
    "${bundlefwk_path}/services/bundlemgr/test:bundlemgr_test_config",
  ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${form_fwk_path}:fms_target",
    "${form_fwk_path}:fmskit_native",
    "${form_fwk_path}:form_manager",
    "//third_party/googletest:gmock_main",
  ]

  external_deps = [
    "ability_base:want",
    "access_token:libaccesstoken_sdk",
    "appspawn:appspawn_socket_client",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "eventhandler:libeventhandler",
    "form_fwk:form_manager",
    "hilog:libhilog",
    "ipc:ipc_core",
    "kv_store:distributeddata_inner",
    "relational_store:native_rdb",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":FmsFormDistributedClientTest" ]
}
