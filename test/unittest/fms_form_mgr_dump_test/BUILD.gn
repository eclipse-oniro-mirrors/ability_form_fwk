import("//build/test.gni")
import("//foundation/ability/form_fwk/form_fwk.gni")

module_output_path = "form_fwk/form_mgr_service"

ohos_unittest("FmsFormMgrDumpTest") {
  module_out_path = module_output_path

  sources = [ "${form_fwk_path}/test/mock/src/mock_bundle_manager.cpp" ]
  sources += [ "fms_form_mgr_dump_test.cpp" ]

  include_dirs = [
    "//third_party/zlib/contrib/minizip",
    "//third_party/zlib",
    "${ability_runtime_path}/services/formmgr/include",
    "${systemabilitymgr_path}/samgr/adapter/interfaces/innerkits/include",
    "${systemabilitymgr_path}/samgr/interfaces/innerkits/samgr_proxy/include",
    "${form_fwk_path}/interfaces/inner_api/include",
  ]

  configs = [
    "${form_fwk_path}/test:formmgr_test_config",
    "${ability_runtime_path}/services/abilitymgr:abilityms_config",
  ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
  deps = [
    "${form_fwk_path}:fms_target",
    "${form_fwk_path}:fmskit_native",
    "//third_party/googletest:gmock_main",
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:configuration",
    "ability_base:want",
    "ability_runtime:app_manager",
    "access_token:libaccesstoken_sdk",
    "appspawn:appspawn_socket_client",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "eventhandler:libeventhandler",
    "ffrt:libffrt",
    "form_fwk:form_manager",
    "hilog:libhilog",
    "ipc:ipc_core",
    "kv_store:distributeddata_inner",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]

  if (cite_memmgr_plugin) {
    external_deps += [ "memmgr_override:memmgrclient" ]
  } else if (cite_memmgr) {
    external_deps += [ "memmgr:memmgrclient" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":FmsFormMgrDumpTest" ]
}
